<link rel="stylesheet" href="/css/home.css">

<% if(locals.user){ %>
    <div id="home-container">
   

        <section id="feed-posts">
            <div class="form-container">
                <form action="/posts/create" id="new-post-form" method="POST">
                    <div class="input-container">
                        <textarea name="content" placeholder="Type Here..." cols="70" required></textarea>
                        <button type="submit" class="post-button">&#10148;</button>
                    </div>
                </form>
            </div>


            <div id="posts-list-container">
                <ul style="padding: 0px;">
                    <% for(post of posts){ %>

                        <%- include('_post') -%>

                            <%} %>
                </ul>
            </div>
        </section>
        <section id="user-friends">
            <h3>Friends</h3>
            <ul>
                <%for(u of all_users){%>
                <li><a href="/users/profile/<%=u._id%>"><%=u.name%>
                      
                    </a></li>
                <%}%>
            </ul>
        </section>
      
    </div>
    <% } %>
   
