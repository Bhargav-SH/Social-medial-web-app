<link rel="stylesheet" href="/css/home.css">
<section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user){ %>
        <form action="/posts/create" id="new-post-form" method="POST">
                <div class="input-container">
                    <textarea name="content" placeholder="Type Here..." cols="70" required></textarea>
                    <button type="submit" class="post-button">&#10148;</button>
                </div>
            </form>
        <% } %>
        <div id="posts-list-container">
                <ul>
                   <% for(post of posts){%>
                        <li>
                        <p>
                            <%= post.content%>
                            <br>
                            <small>
                                <%= post.user.name%>
                            </small> 
                            </p>   
                        </li>
                   <%}%>

                </ul>
        </div>

</section>

